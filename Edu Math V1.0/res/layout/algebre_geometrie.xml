<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/menu_background"
     >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.44" >

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="218dp"
                android:layout_height="94dp"
                android:layout_x="56dp"
                android:layout_y="30dp"
                android:src="@drawable/algebre" />

            <Button
                android:id="@+id/btn_alg"
                android:layout_width="184dp"
                android:layout_height="51dp"
                android:layout_x="79dp"
                android:layout_y="132dp"
                android:background="@drawable/mybutton"
                android:text="Algébre" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="136dp"
                android:layout_height="90dp"
                android:layout_x="107dp"
                android:layout_y="204dp"
                android:src="@drawable/geometrie" />

            <Button
                android:id="@+id/btn_geo"
                android:layout_width="184dp"
                android:layout_height="56dp"
                android:layout_x="78dp"
                android:layout_y="304dp"
                android:background="@drawable/mybutton"
                android:text="Géométrie" />

        </AbsoluteLayout>

    </FrameLayout>

</LinearLayout>